<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item3_img"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/test3_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:paddingVertical="3dp"
        android:paddingHorizontal="6dp"
        app:layout_constraintTop_toTopOf="@+id/item3_img"
        app:layout_constraintStart_toStartOf="@id/item3_img"
        android:background="#696969"
        />
    <TextView
        android:id="@+id/test3_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALEXANDER WANG"
        android:textStyle="bold"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@+id/item3_img"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        />
    <TextView
        android:id="@+id/test3_subTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="체인 골지 슬리브리스 원피스 체인 골지 슬리브리스 원피스 체인 골지 슬리브리스 원피스 체인 골지 슬리브리스 원피스"
        android:textSize="8dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/test3_Title"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>